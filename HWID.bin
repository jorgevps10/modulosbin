  case $opcion in
    1) echo "userSSH" > ${ADM_user}/userMODE
       clear
       msg -bar
       print_center -verd "MODO SSH ACTIVA"
       enter;;
    2) echo "userTOKEN" > ${ADM_user}/userMODE
       clear
       msg -bar
       print_center -verd "MODO TOKEN ACTIVA"
       enter;;
    0)return 1;;
  esac
}

