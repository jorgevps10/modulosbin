#!/bin/bash

#DEFINIR COLORES  DEL MENU
RED="\034[0;31"
BLUE="\033[0;34"
BLANCO="\033[1;37"
bar="${GREEN}"


#MENU PRINCIPAL
main_menu() {
display_header
echo -e "${BLANCO} [1] ${GREEN} INSTALADOR"
echo -e "${BLANCO} [2] ${GREEN} DESINSTALADOR"
echo
read -p "SELECIONE UNA OPCION : " option

case $option in
 1) instalador ;;
 2) desinstalador ;;
 0) exit ;;
 *) echo -e "${RED} Opcion invalida" ;;

esac

echo -ne "${GREEN} Enter para continuar"

read -r enter

menu_principal

}

