#!/bin/bash
# Date: 19/12/2023

# Define colors
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
RESET='\033[0m'

# Function to display the menu header
display_header() {
    clear
    echo -e "${YELLOW}=========================================="
    echo -e "   MENU INSTALADOR WS-EPRO By @ZubZer3"
    echo -e "==========================================${RESET}"
    echo
}

# Function to display the menu options
display_menu() {
    display_header
    echo -e "${YELLOW}[${GREEN}1${YELLOW}]${RESET} ACTIVAR WS-EPRO CLOUDFLARE"
    echo -e "${YELLOW}[${GREEN}2${YELLOW}]${RESET} MODIFICAR PUERTO WS-EPRO"
    echo -e "${YELLOW}[${GREEN}3${YELLOW}]${RESET} DESACTIVAR WS-EPRO"
    echo -e "${YELLOW}[${GREEN}0${YELLOW}]${RESET} SALIR DEL MENU"
    echo
    read -p " SELECIONE UNA OPCION : " option

    case $option in
        1) activate_ws_epro ;;
        2) modify_ws_epro_port ;;
        3) deactivate_ws_epro ;;
        0) exit ;;
        *) echo -e "Opcion inv√°lida. Intente de nuevo." ;;
    esac

    echo -ne "\nPresione Enter para continuar"
    read -r enter
    display_menu
}
